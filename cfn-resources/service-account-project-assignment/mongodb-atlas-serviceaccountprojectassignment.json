{
    "typeName": "MongoDB::Atlas::ServiceAccountProjectAssignment",
    "description": "Assigns a Service Account to a Project with specified roles in MongoDB Atlas.",
    "sourceUrl": "https://github.com/mongodb/mongodbatlas-cloudformation-resources/tree/master/cfn-resources/service-account-project-assignment",
    "definitions": {},
    "properties": {
        "OrgId": {
            "description": "Unique 24-hexadecimal digit string that identifies the organization. Required for List operation.",
            "type": "string",
            "pattern": "^([a-f0-9]{24})$"
        },
        "ClientId": {
            "description": "The Client ID of the Service Account.",
            "type": "string"
        },
        "ProjectId": {
            "description": "Unique 24-hexadecimal digit string that identifies your project.",
            "type": "string",
            "pattern": "^([a-f0-9]{24})$"
        },
        "Roles": {
            "description": "The Project permissions for the Service Account in the specified Project.",
            "type": "array",
            "insertionOrder": false,
            "items": {
                "type": "string"
            },
            "minItems": 1,
            "uniqueItems": true
        },
        "Profile": {
            "type": "string",
            "description": "Profile used to provide credentials information, (a secret with the cfn/atlas/profile/{Profile}, is required), if not provided default is used",
            "default": "default"
        }
    },
    "required": [
        "ClientId",
        "ProjectId",
        "Roles"
    ],
    "createOnlyProperties": [
        "/properties/ClientId",
        "/properties/ProjectId",
        "/properties/Profile"
    ],
    "primaryIdentifier": [
        "/properties/ProjectId",
        "/properties/ClientId",
        "/properties/Profile"
    ],
    "handlers": {
        "create": {
            "permissions": [
                "secretsmanager:GetSecretValue"
            ]
        },
        "read": {
            "permissions": [
                "secretsmanager:GetSecretValue"
            ]
        },
        "update": {
            "permissions": [
                "secretsmanager:GetSecretValue"
            ]
        },
        "delete": {
            "permissions": [
                "secretsmanager:GetSecretValue"
            ]
        },
        "list": {
            "permissions": [
                "secretsmanager:GetSecretValue"
            ]
        }
    },
    "tagging": {
        "taggable": false
    },
    "additionalProperties": false
}
