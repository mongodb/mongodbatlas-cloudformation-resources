{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Returns, takes, and removes Cloud Backup snapshots, this will be billed to your Atlas account.",
  "Parameters": {
    "ProjectId": {
      "Type": "String",
      "Description": "",
      "ConstraintDescription": ""
    },
    "InstanceName": {
      "Type": "String",
      "Description": "Atlas Cluster Name where to get the snapshot",
      "ConstraintDescription": ""
    },
    "InstanceType": {
      "Type": "String",
      "Default": "cluster",
      "AllowedValues": [
        "cluster"
      ]
    },
    "Profile": {
      "Type": "String",
      "Default": "default",
      "Description": "",
      "ConstraintDescription": ""
    }
  },
  "Mappings": {},
  "Resources": {
    "CloudBackupSnapshot": {
      "Type": "MongoDB::Atlas::CloudBackupSnapshot",
      "Properties": {
        "ProjectId": {
          "Ref": "ProjectId"
        },
        "InstanceName": {
          "Ref": "InstanceName"
        },
        "InstanceType": {
          "Ref": "InstanceType"
        },
        "Description": "A testing for creating cloud provider snapshots",
        "RetentionInDays": 3,
        "Profile": {
          "Ref": "Profile"
        }
      }
    }
  },
  "Outputs": {
    "SnapshotId": {
      "Description": "Id of the cloud provider snapshot",
      "Value": {
        "Fn::GetAtt": [
          "CloudBackupSnapshot",
          "SnapshotId"
        ]
      }
    },
    "ReplicasetName": {
      "Value": {
        "Fn::GetAtt": [
          "CloudBackupSnapshot",
          "ReplicaSetName"
        ]
      }
    }
  }
}
