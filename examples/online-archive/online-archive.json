{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Returns, adds, edits, or removes an online archive, this will be billed to your Atlas account.",
  "Mappings": {},
  "Parameters": {
    "Profile": {
      "Type": "String",
      "Description": "MongoDB Atlas Profile name"
    },
    "ProjectId": {
      "Type": "String"
    },
    "ClusterName": {
      "Type": "String"
    },
    "DBName": {
      "Type": "String"
    },
    "CollName": {
      "Type": "String"
    }
  },
  "Resources": {
    "OnlineArchive": {
      "Type": "MongoDB::Atlas::OnlineArchive",
      "Properties": {
        "Profile": {
          "Ref": "Profile"
        },
        "ClusterName": {
          "Ref": "ClusterName"
        },
        "CollName": {
          "Ref": "CollName"
        },
        "Criteria": {
          "Type": "DATE",
          "DateField": "created",
          "DateFormat": "ISODATE",
          "ExpireAfterDays": "15"
        },
        "DbName": {
          "Ref": "DBName"
        },
        "ProjectId": {
          "Ref": "ProjectId"
        },
        "PartitionFields": [
          {
            "FieldName": "firstName",
            "Order": "0",
            "FieldType": "string"
          },
          {
            "FieldName": "lastName",
            "Order": "1",
            "FieldType": "string"
          }
        ]
      }
    }
  },
  "Outputs": {
    "Id": {
      "Value": {
        "Ref": "OnlineArchive"
      }
    },
    "ArchiveId": {
      "Value": {
        "Fn::GetAtt": [
          "OnlineArchive",
          "ArchiveId"
        ]
      }
    },
    "State": {
      "Value": {
        "Fn::GetAtt": [
          "OnlineArchive",
          "State"
        ]
      }
    }
  }
}
