{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Returns, adds, edits, or removes an online archive, this will be billed to your Atlas account.",
  "Mappings": {},
  "Parameters":{
    "ProjectId": {
      "Type": "String"
    },
    "ClusterName": {
      "Type": "String"
    },
    "DBName": {
      "Type": "String"
    },
    "CollName": {
      "Type": "String"
    }
  },
  "Resources": {
    "OnlineArchive": {
      "Type": "MongoDB::Atlas::OnlineArchive",
      "Properties": {
        "ClusterName":  { "Ref" : "ClusterName" },
        "CollName":  { "Ref" : "CollName" },
        "Criteria": {
          "Type": "DATE",
          "DateField": "created",
          "DateFormat": "ISODATE",
          "ExpireAfterDays": "5"
        },
        "DbName":  { "Ref" : "DBName" },
        "ProjectId": { "Ref" : "ProjectId" },
        "PartitionFields": [
          {
            "FieldName": "firstName",
            "Order": "0",
            "FieldType": "string"
          },
          {
            "FieldName": "lastName",
            "Order": "1",
            "FieldType": "string"
          }
        ]
      }
    }
  },

  "Outputs": {
    "ArchiveId": {
      "Value": {
        "Ref": "OnlineArchive"
      }
    }
  }
}