{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "This template creates a Search Index on the MongoDB Atlas API, this will be billed to your Atlas account.",
  "Parameters": {
    "ProjectId": {
      "Type": "String",
      "Description": "Project Id.",
      "Default": "",
      "ConstraintDescription": ""
    },
    "ClusterName": {
      "Type": "String",
      "Description": "Cluster name.",
      "Default": "",
      "ConstraintDescription": ""
    },
    "DatabaseName": {
      "Type": "String",
      "Default": "",
      "Description": "Database name",
      "ConstraintDescription": ""
    },
    "CollectionName": {
      "Type": "String",
      "Default": "",
      "Description": "Collection name",
      "ConstraintDescription": ""
    },
    "IndexName": {
      "Type": "String",
      "Default": "",
      "Description": "Index Name.",
      "ConstraintDescription": ""
    },
    "Profile": {
      "Type": "String",
      "Default": "default",
      "Description": "Secret Manager Profile that contains the Atlas Programmatic keys.",
      "ConstraintDescription": ""
    },
    "Analyzer": {
      "Type": "String",
      "Default": "lucene.standard",
      "Description": "Analyzer to use for indexing"
    },
    "SearchAnalyzer": {
      "Type": "String",
      "Default": "lucene.standard",
      "Description": "Analyzer to use for querying"
    },
    "NumPartitions": {
      "Type": "Number",
      "Default": 1,
      "Description": "Number of partitions for the index"
    },
    "StoredSource": {
      "Type": "String",
      "Default": "{\"include\": [\"title\", \"description\"]}",
      "Description": "Stored source configuration (include/exclude fields)"
    },
    "SynonymCollection": {
      "Type": "String",
      "Default": "synonyms_collection",
      "Description": "Collection name that stores synonyms"
    },
    "SynonymName": {
      "Type": "String",
      "Default": "mySynonyms",
      "Description": "Name for the synonym mapping"
    },
    "SynonymAnalyzer": {
      "Type": "String",
      "Default": "lucene.standard",
      "Description": "Analyzer for synonyms"
    }
  },
  "Mappings": {},
  "Resources": {
    "SearchIndex": {
      "Type": "MongoDB::Atlas::SearchIndex",
      "Properties": {
        "Analyzer": {
          "Ref": "Analyzer"
        },
        "SearchAnalyzer": {
          "Ref": "SearchAnalyzer"
        },
        "ClusterName": {
          "Ref": "ClusterName"
        },
        "CollectionName": {
          "Ref": "CollectionName"
        },
        "Profile": {
          "Ref": "Profile"
        },
        "Database": {
          "Ref": "DatabaseName"
        },
        "Name": {
          "Ref": "IndexName"
        },
        "ProjectId": {
          "Ref": "ProjectId"
        },
        "Mappings": {
          "Dynamic": true
        },
        "Synonyms": [
          {
            "Analyzer": {
              "Ref": "SynonymAnalyzer"
            },
            "Name": {
              "Ref": "SynonymName"
            },
            "Source": {
              "Collection": {
                "Ref": "SynonymCollection"
              }
            }
          }
        ],
        "StoredSource": {
          "Ref": "StoredSource"
        },
        "NumPartitions": {
          "Ref": "NumPartitions"
        }
      }
    }
  },
  "Outputs": {
    "Teams": {
      "Description": "Search Index Information",
      "Value": {
        "Ref": "SearchIndex"
      }
    },
    "SearchIndexStatus": {
      "Value": {
        "Fn::GetAtt": [
          "SearchIndex",
          "Status"
        ]
      }
    }
  }
}
